<body>
    <%- include('partials/navbar.ejs'); %>

    <div class="container">

        <div class="card" id="question-form">
            <div class="card-header">
                <h3>Faça sua pergunta</h3>
            </div>
            <div class="card-body">
                <form method="POST" action="/savequestion">
                    <label>Título</label>
                    <input name="title" type="text" placeholder="Título da pergunta" class="form-control">
                    <label>Descrição</label>
                    <textarea name="description" placeholder="Descreva sua pergunta" class="form-control"></textarea><br>
                    <button class="btn btn-primary">Confirmar</button>
                </form>
            </div>

        </div>

    </div>
</body>

